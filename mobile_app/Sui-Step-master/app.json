{
  "expo": {
    "name": "Sui Step",
    "slug": "SuiStep",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/OnboardingPageShoeMain.png",
    "scheme": "suistep",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.SuiStep",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to your Sui Wallet device (Sui-Wallet-BLE) for secure transaction signing.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to your Sui Wallet device (Sui-Wallet-BLE) for secure transaction signing.",
        "NSLocationWhenInUseUsageDescription": "This app uses location services to scan for nearby Bluetooth devices."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/OnboardingPageShoeMain.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA"
      ],
      "package": "com.anonymous.SuiStep"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    },
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to your Sui Wallet device (Sui-Wallet-BLE) for secure transaction signing."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "50ee2d9b-33a7-424c-9f6f-6fab5c60b575"
      }
    }
  }
}
